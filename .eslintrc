{
    "env": {
        "node": true
    },

    "globals": {
        "config": true
    },

    "rules": {
        // Best practices
        "comma-dangle": 0,
        "complexity": 1,
        "no-else-return": 1,
        "no-floating-decimal": 1,
        "wrap-iife": 2,

        // Strict mode
        "strict": [2, "global"],

        // Variable rules
        "no-undefined": 1,
        "no-use-before-define": [2, "nofunc"],

        // Node.js rules
        "no-sync": 1,

        // Style rules
        "indent": 2,
        "brace-style": 2,
        "comma-style": 2,
        "consistent-this": 2,
        "func-style": 2,
        "max-nested-callbacks": [2, 3],
        "no-lonely-if": 1,
        "no-nested-ternary": 1,
        "no-underscore-dangle": 0,
        "quotes": [2, "single"]
    }
}
